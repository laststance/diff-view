{
  "name": "diff-view",
  "productName": "Diff View",
  "version": "1.0.0",
  "description": "An offline desktop application for GitHub-style text comparison and diff visualization",
  "homepage": "https://github.com/diff-view/diff-view",
  "repository": {
    "type": "git",
    "url": "https://github.com/diff-view/diff-view.git"
  },
  "bugs": {
    "url": "https://github.com/diff-view/diff-view/issues"
  },
  "main": ".vite/build/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "prettier": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,json}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "build:all": "npm run build:windows && npm run build:macos && npm run build:linux",
    "build:windows": "electron-forge make --platform=win32",
    "build:macos": "electron-forge make --platform=darwin",
    "build:linux": "electron-forge make --platform=linux",
    "build:current": "electron-forge make",
    "package:all": "npm run package:windows && npm run package:macos && npm run package:linux",
    "package:windows": "electron-forge package --platform=win32",
    "package:macos": "electron-forge package --platform=darwin",
    "package:linux": "electron-forge package --platform=linux",
    "package:current": "electron-forge package",
    "prebuild": "npm run lint && npm run typecheck && npm run test",
    "postinstall": "electron-rebuild"
  },
  "keywords": [],
  "author": {
    "name": "Ryota Murakami",
    "email": "dojce1048@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/maker-deb": "^7.9.0",
    "@electron-forge/maker-dmg": "^7.9.0",
    "@electron-forge/maker-rpm": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.9.0",
    "@electron-forge/plugin-fuses": "^7.9.0",
    "@electron-forge/plugin-vite": "^7.9.0",
    "@electron/fuses": "^1.8.0",
    "@electron/rebuild": "^4.0.1",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "electron": "38.2.0",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-vitest": "^0.5.4",
    "jsdom": "^27.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vite": "^5.4.20",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@git-diff-view/file": "^0.0.32",
    "@git-diff-view/react": "^0.0.32",
    "electron-squirrel-startup": "^1.0.1",
    "lucide-react": "^0.544.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.9.3",
    "zustand": "^5.0.8"
  }
}